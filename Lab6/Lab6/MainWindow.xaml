<Window x:Class="Lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR Code Generator" Height="350" Width="500">
    <Grid>
        <TextBox Name="ContentTextBox" Margin="20,20,20,0" Height="30" VerticalAlignment="Top">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="Text" Value="Enter text or URL"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Text" Value=""/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button Content="Generate QR Code" Margin="20,60,20,0" Height="30" VerticalAlignment="Top" Click="GenerateQRCode"/>
        <Image Name="QRCodeImage" Margin="20,100,20,0" Height="150" VerticalAlignment="Top"/>
    </Grid>
</Window>

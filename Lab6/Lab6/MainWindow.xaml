<Window x:Class="Lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Lab6.Services"
        Title="QR Code Generator" Height="400" Width="500">
    <Grid>
        <TextBox Name="ContentTextBox" Margin="20,20,20,0" Height="30" VerticalAlignment="Top"
                 local:PlaceholderService.Placeholder="Enter text or URL" Tag="Enter text or URL"/>

        <Button Content="Generate QR Code" Margin="20,60,20,0" Height="30" VerticalAlignment="Top" Click="GenerateQRCode"/>
        <Image Name="QRCodeImage" Margin="20,100,20,0" Height="150" VerticalAlignment="Top"/>
        <Button Content="View Saved QR Codes" Margin="20,270,20,0" Height="30" VerticalAlignment="Top" Click="ViewSavedQRCodes"/>
    </Grid>
</Window>
